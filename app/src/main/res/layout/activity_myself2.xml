<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@drawable/profile_img_bg" >


        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" >
            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_no_avarta_icon" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="2dp" >
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未登录"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/body_cont"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView


                android:id="@+id/tvlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="登录"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/accsessory_arrow_right"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/body_cont"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tvmyinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="我的信息"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView

                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/accsessory_arrow_right"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/body_cont"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
             >

            <TextView
                android:id="@+id/tvmyorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="我的订单"
                android:textColor="#000000"
                 />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/accsessory_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/body_cont"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"

            >
            <TextView
                android:id="@+id/tvmyfootprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="我的足迹"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/accsessory_arrow_right" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/body_cont"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"

            >
            <TextView
                android:id="@+id/caculation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="个人计算"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/accsessory_arrow_right" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
